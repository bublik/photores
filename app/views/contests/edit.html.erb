<h1>Editing contest</h1>

<% form_for(@contest) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :prize %><br />
    <%= f.text_field :prize %>
  </p>
  <p>
    <%= f.label :sponsor %><br />
    <%= f.text_area :sponsor %>
  </p>
  <p>
    <%= f.label :photo_id %><br />
    <%= f.text_field :photo_id %>
  </p>
  <p>
    <%= f.label :date_from %><br />
    <%= f.date_select :date_from %>
  </p>
  <p>
    <%= f.label :date_to %><br />
    <%= f.date_select :date_to %>
  </p>
  <p>
    <%= f.label :is_completed %><br />
    <%= f.check_box :is_completed %>
  </p>
  <p>
    <%= submit_tag "Update", :disable_with => 'Загрузка' %>
  </p>
<% end %>

<%= link_to 'Show', @contest %> |
<%= link_to 'Back', contests_path %>
